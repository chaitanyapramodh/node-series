//create a invalid route in every route.js file which will throw error
// invalid route
router.use('*',(req,res,next)=>{
  var error=new Error("Invalid path")
  error.status=404;
  next(error)
  
})

//in utilities create a error handling js file which will also log errors

const fs = require('fs');
const path=require(path)

let errorLogger = function (err, req, res, next) {
    if (err) {
        fs.appendFile(path.join(__dirname,'utilities','errorLogger.log'), new Date() + " - " + err.stack + "\n", function (error) {
            if (error) {
                console.log("Failed in logging error");
            }
        });
        if (err.status) {
            res.status(err.status)
        }
        else {
            res.status(500);
        }
        res.json({ "message": err.message })
    }
    next();
}

module.exports = errorLogger;

//in app.js just use this errorLogger

app.use(ErrorLogger);
